<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenRelative">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#373535"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_person"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_person_24"
            android:layout_centerVertical="true"
            app:tint="#E9E1E1" />

        <TextView
            android:id="@+id/tv__open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#E9E1E1"
            android:layout_toRightOf="@id/iv_person"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_add_24"
            android:layout_centerVertical="true"
            app:tint="#E9E1E1"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/iv_diamond"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_diamond_24"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            app:tint="#E9E1E1"
            android:layout_toLeftOf="@id/iv_add"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/option"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#111"
        android:layout_below="@id/top_bar"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Places"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/im_schedule"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_schedule_24"
            android:layout_below="@id/tv_places"
            app:tint="#414145"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/tv_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent"
            android:textSize="20dp"
            android:textColor="#EDE1E1"
            android:layout_below="@id/tv_places"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/im_schedule"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/im_people"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_people_24"
            android:layout_below="@id/im_schedule"
            app:tint="#414145"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/tv_shared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shared with me"
            android:textSize="20dp"
            android:textColor="#EDE1E1"
            android:layout_below="@id/im_schedule"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/im_people"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/im_smartphone"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_smartphone_24"
            android:layout_below="@id/im_people"
            app:tint="#414145"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/tv_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This device"
            android:textSize="20dp"
            android:textColor="#EDE1E1"
            android:layout_below="@id/im_people"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/im_smartphone"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/im_cloude"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_cloud_queue_24"
            android:layout_below="@id/im_smartphone"
            app:tint="#414145"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/tv_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse"
            android:textSize="20dp"
            android:textColor="#EDE1E1"
            android:layout_below="@id/tv_device"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/im_cloude"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google Drive, SD card, and more..."
            android:textSize="18dp"
            android:textColor="#414145"
            android:layout_below="@id/tv_browse"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/im_cloude"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/im_pluse"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_add_24"
            android:layout_below="@id/im_cloude"
            app:tint="#414145"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/tv_addplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add a place"
            android:textSize="20dp"
            android:textColor="#EDE1E1"
            android:layout_below="@id/im_cloude"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/im_pluse"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect to cloud storage"
            android:textSize="18dp"
            android:textColor="#414145"
            android:layout_below="@id/tv_addplace"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/im_cloude"
            android:layout_marginLeft="20dp"/>



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#373535"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/im_schedule2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_schedule_24"
                app:tint="#C7C7D0"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tv_recent2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent"
                android:textSize="15sp"
                android:textColor="#C7C7D0"
                android:layout_below="@id/im_schedule2"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/im_people2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_people_24"
                app:tint="#C7C7D0"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tv_shared2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shared"
                android:textSize="15sp"
                android:textColor="#C7C7D0"
                android:layout_below="@id/im_people2"
                tools:ignore="NotSibling" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/im_file"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_folder_open_24"
                app:tint="#C7C7D0"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/tv_open2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open"
                android:textSize="15sp"
                android:textColor="#C7C7D0"
                android:layout_below="@id/im_file"
                tools:ignore="NotSibling" />

        </RelativeLayout>





    </RelativeLayout>


</RelativeLayout>